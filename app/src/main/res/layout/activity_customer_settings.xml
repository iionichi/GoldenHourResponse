<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.acer.goldenhour.CustomerSettingsActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_bg_one"
    tools:context="com.example.acer.goldenhour.CustomerSettingsActivity"
    android:orientation="vertical"
    android:padding="20sp">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phoneEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:hint="Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ephone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:hint="Phone"
        android:inputType="number" />

    <EditText
        android:id="@+id/ephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/medicompany"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:background="@null"
        android:hint="Emergency Phone No."
        android:inputType="text" />

    <EditText
        android:id="@+id/medicompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/medino"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:hint="Mediclaim Company Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/medino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:hint="Mediclaim Policy No."
        android:inputType="text" />



    <Button
        android:id="@+id/confirm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:background="@drawable/rounded_shape"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/back"
        android:layout_alignRight="@+id/back"
        android:layout_alignTop="@+id/confirm"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginTop="55dp"
        android:text="Or"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirm"
        android:layout_alignStart="@+id/confirm"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginTop="39dp"
        android:background="@drawable/rounded_shape"
        android:text="Back"
        android:textColor="#FFFFFF" />

</RelativeLayout>


    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:itemTextColor="@color/colorBlack"
        app:itemIconTint="@color/colorBlack"
        app:menu="@menu/drawermenu"
        android:id="@+id/nv"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>