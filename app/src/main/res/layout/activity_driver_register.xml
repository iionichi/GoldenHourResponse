<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_five"
    tools:context="com.example.acer.goldenhour.CustomerSettingsActivity"
    android:orientation="vertical"
    android:padding="20sp">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:hint="E - mail"
        android:id="@+id/email"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:layout_below="@+id/email"
        android:hint="Password" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/phone"
        android:hint="Driver Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:hint="Phone"
        android:inputType="number" />

    <EditText
        android:id="@+id/ambulance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="19dp"
        android:hint="Ambulance"
        android:inputType="text"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack" />

    <EditText
        android:id="@+id/ambulance_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ambulance"
        android:layout_marginTop="15dp"
        android:hint="Ambulance Number"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_marginTop="370dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:checked="true"
            android:id="@+id/normalAmbulance"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardiac"
            android:id="@+id/cardiacAmbulance"/>

    </RadioGroup>

    <Button
        android:id="@+id/registration"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_shape"
        android:text="Register"
        android:textColor="#FFFFFF" />

</RelativeLayout>
