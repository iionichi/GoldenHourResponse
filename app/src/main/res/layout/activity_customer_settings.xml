<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.acer.goldenhour.CustomerSettingsActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_five"
    tools:context="com.example.acer.goldenhour.CustomerSettingsActivity"
    android:orientation="vertical"
    android:padding="10sp">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phoneEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:hint="Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ephone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:hint="Phone"
        android:inputType="number" />

    <EditText
        android:id="@+id/ephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/medicompany"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:background="@null"
        android:hint="Emergency Phone No."
        android:inputType="text" />

    <EditText
        android:id="@+id/medicompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/medino"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:hint="Mediclaim Company Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/medino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:hint="Mediclaim Policy No."
        android:inputType="text" />

    <Spinner
        android:id="@+id/bloodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:dropDownWidth="match_parent"
        android:layout_below="@+id/medino"/>

    <Spinner
        android:id="@+id/rhFactor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:dropDownWidth="match_parent"
        android:layout_below="@+id/bloodGroup"/>

    <!--<Button-->
        <!--android:id="@+id/confirm"-->
