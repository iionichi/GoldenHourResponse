<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/three"
    tools:context="com.example.acer.goldenhour.DriverLoginActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/purple_logo" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:hint="E - mail" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:hint="Password" />

    <Button
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/rounded_shape"
        android:text="Login"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/phone_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registration"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/registration"
        android:layout_marginBottom="11dp"
        android:background="@drawable/rounded_shape"
        android:text="Login With Phone"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/registration"
        android:layout_alignEnd="@+id/login"
        android:layout_alignRight="@+id/login"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="89dp"
        android:text="Or"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/registration"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/login"
        android:layout_marginBottom="75dp"
        android:background="@drawable/rounded_shape"
        android:text="Registration"
        android:textColor="#FFFFFF" />

</RelativeLayout>
